#password attempts

correct_password = "1234"
attempts = 0

while attempts < 3:
    password = input("Enter ATM Password: ")

    if password == correct_password:
        print("Access Granted âœ…")
        break
    else:
        attempts += 1
        print("Wrong Password âŒ")
        print("Attempts left:", 3 - attempts)

if attempts == 3:
    print("Card Blocked ğŸš«")

#OTP generation
import random

# Generate 4-digit OTP
otp = random.randint(1000, 9999)
print("Your OTP is:", otp)   # In real apps, this is sent to mobile/email

attempts = 3   # Maximum attempts

while attempts > 0:
    user_input = int(input("Enter the OTP: "))
    
    if user_input == otp:
        print("âœ… OTP Verified Successfully!")
        break
    else:
        attempts -= 1
        print(f"âŒ Wrong OTP! Attempts left: {attempts}")

if attempts == 0:
    print("ğŸš« Too many failed attempts. Access Denied.")

